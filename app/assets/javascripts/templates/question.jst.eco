<div class="question-item">
  <div class="row">
    <div class="col-md-2">
      <div class="title">
        <a href="/questions/<%= @question.id %>"><%= @question.title %></a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="question-text">
        <%- @question.text %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="question-time">
        <%= @question.created_at %>
      </div>
    </div>
  </div>
</div>