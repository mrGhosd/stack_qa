.category-page.row
  .col-md-10
    .category-title
      h3= @category.title
    .category-main
      .category-desc
        = @category.description.html_safe
      .category-hide
        = link_to t('category.hide'), "#", class: "btn btn-primary glyphicon glyphicon-arrow-up toggle-description", remote: true
  .col-md-2
    .category-image
      = image_tag @category.image.url(:small) || "empty-check-box-th.png"
.categories-questions.row
  - if @category.questions.blank?
    h3 = t('category.empty_questions')
    = link_to "Создать", new_question_path, class: 'btn btn-success'
  - else
    - @category.questions.each do |question|
      = render partial: "questions/question", locals: {question: question}